<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="48sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="20dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="32sp"
        android:background="@drawable/rounded_corner_white_background"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/title"
        android:hint="@string/search_text_placeholder" />

    <Spinner
        android:id="@+id/filter_drop_down_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:background="@drawable/rounded_corner_white_background"
        android:layout_marginBottom="25dp"
        android:hint="@string/filter_text_placeholder"/>

    <Spinner
        android:id="@+id/format_drop_down_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_drop_down_menu"
        android:background="@drawable/rounded_corner_white_background"
        android:layout_marginBottom="25dp"
        android:hint="@string/format_text_placeholder"/>

    <Spinner
        android:id="@+id/sort_by_drop_down_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/format_drop_down_menu"
        android:background="@drawable/rounded_corner_white_background"
        android:layout_marginBottom="25dp"
        android:hint="@string/sort_by_text_placeholder"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_below="@id/sort_by_drop_down_menu"
        android:text="@string/search"
        android:background="@drawable/rounded_corner" />

</RelativeLayout>